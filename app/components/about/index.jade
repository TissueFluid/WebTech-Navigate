            div(class="content")
                a(class="header") {{profile.name}}
                div(class="meta")
                    span {{profile.title}} 
                div(class="description") 
                    h5 {{profile.description}}
                ul(style='margin-top: 20px')
                    li 
                        a(href='{{profile.linkedin}}') linkedin
                    li 
